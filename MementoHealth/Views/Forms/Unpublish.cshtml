@model MementoHealth.Models.FormViewModel

@{
    ViewBag.Title = "Unpublish Form";    
}

<div class="row d-flex justify-content-center">
    <div class="shadow bg-light text-center" style="border-radius: 12px">
        <div class="text-danger text-center h2 font-weight-bold pb-1" style="padding-top: 25px;">Unpublish this Form?</div>
        <ul class="text-info text-left mr-4">
            <li>Unpublishing will allow updating form questions and conditions.</li>
        </ul>
        <hr />
        <div class="custom-form-div" style="padding-bottom: 0px; min-width: 300px">

            <div class="row justify-content-center">
                <div class="col-md-auto">
                    <section>
                        <div class="form-group">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">@Html.DisplayNameFor(model => model.Name)</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Html.DisplayFor(model => model.Name)</div>
                        </div>
                        <div class="form-group mt-4">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">@Html.DisplayNameFor(model => model.NumberOfQuestions)</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Html.DisplayFor(model => model.NumberOfQuestions)</div>
                        </div>
                        <div class="form-group mt-4">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">@Html.DisplayNameFor(model => model.NumberOfSubmissions)</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Html.DisplayFor(model => model.NumberOfSubmissions)</div>
                        </div>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color my-4" style="text-align: center">
                                <input type="submit" value="Unpublish" class="btn btn-danger w-100" />

                            </div>
                            <div style="text-align: center">@Html.ActionLink("Back to Form List", "Index")</div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>