@model MementoHealth.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
    ViewBag.UseFullScreenWidth = true;
}



@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Create Local Password</h3>
    <p class="text-info" style="text-align: center; margin: -15px 0px 25px 0px">
        You do not have a local username/password for this site. Add a local
        account so you can log in without an external login.
    </p>
    <div class="container">
    @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row mb-3 justify-content-center">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            </div>
        <div class="form-group">
            <div class="row mb-3 justify-content-center">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        </div>
    <div class="form-group">
        <div class="row mb-3 my-4 justify-content-center">
            <input type="submit" value="Set Password" class="btn btn-primary" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section styles {
    <style>
        h3 {
            display: flex;
            flex-direction: row;
            padding-bottom: 25px;
        }

            h3:before, h3:after {
                content: "";
                flex: 1 1;
                border-bottom: 1px solid;
                margin: auto;
                color: #e5e5e5
            }

            h3:before {
                margin-right: 10px
            }

            h3:after {
                margin-left: 10px
            }
    </style>
}
