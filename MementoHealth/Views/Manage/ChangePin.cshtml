@model MementoHealth.Models.ChangePinViewModel
@{
    ViewBag.Title = "Change PIN";
    ViewBag.UseFullScreenWidth = true;
}

<div class="row d-flex justify-content-center">
    <div class="shadow bg-light text-center" style="border-radius: 12px">
        <div class="page-title h2 font-weight-bold" style="padding-top: 25px;">@ViewBag.Title</div>
        <div class="custom-form-div" style="margin-top: -50px; padding-bottom: 0px">

            <div class="row">
                <div class="col-md-auto">
                    <section>
                        @using (Html.BeginForm("ChangePin", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.ReturnUrl)
                            @Html.HiddenFor(m => m.LockAfterChangingPin)
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group mt-2">
                                <div class="col-md-auto" style="text-align: left">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-auto font-weight-light" })
                                </div>
                                <div class="col-md-auto">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-auto" style="text-align: left">
                                    @Html.LabelFor(m => m.NewPin, new { @class = "control-label col-md-auto font-weight-light" })
                                </div>
                                <div class="col-md-auto">
                                    @Html.PasswordFor(m => m.NewPin, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-auto" style="text-align: left">
                                    @Html.LabelFor(m => m.ConfirmPin, new { @class = "control-label col-md-auto font-weight-light" })
                                </div>
                                <div class="col-md-auto">
                                    @Html.PasswordFor(m => m.ConfirmPin, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-auto my-4 mt-5 justify-content-center" style="text-align: center">
                                    <input type="submit" value="Change PIN" class="btn btn-primary" />
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("Back to Manage Account", "Index")
                            </p>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}