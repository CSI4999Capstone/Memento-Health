@model MementoHealth.Models.ChangePinViewModel
@{
    ViewBag.Title = "Change PIN";
    ViewBag.UseFullScreenWidth = true;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePin", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="container">
    <div class="form-group">
        <div class="row mb-3 justify-content-center">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        </div>
    <div class="form-group">
        <div class="row mb-3 justify-content-center">
            @Html.LabelFor(m => m.NewPin, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.NewPin, new { @class = "form-control" })
            </div>
        </div>
        </div>
    <div class="form-group">
        <div class="row mb-3 justify-content-center">
            @Html.LabelFor(m => m.ConfirmPin, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.PasswordFor(m => m.ConfirmPin, new { @class = "form-control" })
            </div>
        </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row mb-3 my-4 justify-content-center">
            <input type="submit" value="Change PIN" class="btn btn-primary" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section styles {
    <style>
        h2 {
            display: flex;
            flex-direction: row;
            padding-bottom: 25px;
        }

            h2:before, h2:after {
                content: "";
                flex: 1 1;
                border-bottom: 1px solid;
                margin: auto;
                color: #e5e5e5
            }

            h2:before {
                margin-right: 10px
            }

            h2:after {
                margin-left: 10px
            }
    </style>
}