@model MementoHealth.Models.ChangeFullNameViewModel
@{
    ViewBag.Title = "Change Full Name";
    ViewBag.UseFullScreenWidth = true;
}

@using (Html.BeginForm("ChangeFullName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="page-title h3">Change full name</div>
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="container" style="overflow:auto; white-space: nowrap; width: 500px">
        <div style='float: left; width: 90px'>
            <p class="my-2 font-weight-bold">@Html.LabelFor(m => m.FullName, new { @class = "col-md-4 control-label" })</p><br />
        </div>

        <div style='float: right; width: 77%; overflow-y: auto; text-align: left'>
            <p class="my-1">@Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })</p><br />
        </div>
    </div>

    <div class="form-group">
        <div class="row mb-3 my-4 justify-content-center">
            <input type="submit" class="btn btn-primary" value="Change" />
        </div>
        <div style="text-align: center">@Html.ActionLink("Back to Manage Account", "Index")</div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}