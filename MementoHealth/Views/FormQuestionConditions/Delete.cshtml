@model MementoHealth.Entities.FormQuestionCondition

@{
    ViewBag.Title = "Delete Form Question Condition";
}

<div class="row d-flex justify-content-center">
    <div class="shadow bg-light text-center" style="border-radius: 12px">
        <div class="text-danger page-title h2 font-weight-bold" style="padding-top: 25px;">Delete this Condition?</div>
        <div class="custom-form-div" style="margin-top: -50px; padding-bottom: 0px">

            <div class="row">
                <div class="col-md-auto">
                    <section>
                        <div class="form-group mt-2">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">@Html.DisplayNameFor(model => model.Question.Question)</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Html.DisplayFor(model => model.Question.Question)</div>
                        </div>
                        <div class="form-group mt-4">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">@Html.DisplayNameFor(model => model.Number)</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Html.DisplayFor(model => model.Number)</div>
                        </div>
                        <div class="form-group mt-4">
                            <div class="col-md-auto my-1 font-weight-bold" style="text-align: center">Condition</div><hr style="margin: 0 0 0 0" />
                            <div class="col-md-auto my-1">@Model</div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color my-4" style="text-align: center">
                                <input type="submit" value="Delete" class="btn btn-danger w-100" />

                            </div>
                            <div style="text-align: center">@Html.ActionLink("Back to Condition List", "Index", new { id = Model.QuestionId })</div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>