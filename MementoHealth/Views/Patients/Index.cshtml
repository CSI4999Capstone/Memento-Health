@model IEnumerable<MementoHealth.Entities.Patient>

@{
    ViewBag.Title = "Patients";
}

<div class="box" style="text-align: center">
    <div class="page-title font-weight-bold h2">@ViewBag.Title</div>
    <div style="margin-top:-20px; margin-bottom: 20px">
        <i class="fa fa-user-plus" aria-hidden="true">@Html.ActionLink(" Add", "Create")</i> |
        <i class="fa fa-upload" aria-hidden="true">@Html.ActionLink(" Import", "Import")</i> |
        <i class="fa fa-search" aria-hidden="true">@Html.ActionLink(" Search", "Search")</i>
    </div>
</div>

@Html.Partial("_PatientsTablePartial", Model)

@section styles {
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
}