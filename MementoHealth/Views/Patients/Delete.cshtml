@model MementoHealth.Entities.Patient

@{
    ViewBag.Title = "Delete Patient";
}

<h2 class="text-danger">@ViewBag.Title</h2>
<h3 class="text-danger">Are you sure you want to delete this patient?</h3>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Birthday)</dt>
        <dd>@Html.DisplayFor(model => model.Birthday)</dd>

        <dt>@Html.DisplayNameFor(model => model.ExternalPatientId)</dt>
        <dd>@Html.DisplayFor(model => model.ExternalPatientId)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>